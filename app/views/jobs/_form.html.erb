<%= form_for @job do |f| %>
	<div>
		<%= f.label :title, 'Title' %>	
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :description, 'Description' %>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.label :client, 'Client' %>
		<%= f.collection_select :client_id, Client.all, :id, :title  %>
	</div>
	<div>
		<%= f.submit "submit" %>
	</div>
<% end %>
